<% layout("/layouts/boilerplate") %>
<style>
    .tax-info {
        display: none;
    }
    .switch-div {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .tax-toggle {
        border: 1px solid rgba(200, 200, 200, 0.6);
        height: 4rem;
        width: 18rem;
        border-radius: 1rem;
        padding-top: 18px;
        padding-left: 22px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        margin-right: 12rem;
    }
    .heading h3{
        font-weight: 600;
        font-size: 2rem;
        letter-spacing: 1px;
        margin-top: 0.5rem;
    }
</style>
<body>
     <div class="switch-div" style="height: 7rem;">
        <div class="tax-toggle">
        <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
        </div>
        <div class="heading"><h3><span style="color: #30cfe7">Dorm</span><span style="color: #f7ac39;">Quest</span> <span style="color: #064064;">begins</span> <span style="color: #009bae;">here!</span></h3></div>
     </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text"> 
                <b><%= listing.title %></b> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> per month
                <i class="tax-info"> &nbsp; +18% GST</i>
            </p>
        </div>
        </div>
        </a>
        <% } %>
    </div>
    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxinfo = document.getElementsByClassName("tax-info");
            for (info of taxinfo) {
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }else{
                    info.style.display = "none";
                }
            }
        });
    </script>
</body>
